{
  "name": "neuroclean-app",
  "version": "1.0.0",
  "description": "NeuroClean - Municipal Garbage Reporting System",
  "scripts": {
    "dev": "npm-run-all --parallel dev:citizen dev:sweeper dev:admin dev:landing",
    "dev:citizen": "cd citizen-portal && npm run dev",
    "dev:sweeper": "cd sweeper-portal && npm run dev",
    "dev:admin": "cd admin-portal && npm run dev",
    "dev:landing": "node start-landing.js",
    "build": "npm-run-all --parallel build:citizen build:sweeper build:admin",
    "build:citizen": "cd citizen-portal && npm run build",
    "build:sweeper": "cd sweeper-portal && npm run build",
    "build:admin": "cd admin-portal && npm run build",
    "install:all": "npm install && cd citizen-portal && npm install && cd ../sweeper-portal && npm install && cd ../admin-portal && npm install && cd ../functions && npm install",
    "setup": "node setup-env.js && npm run install:all",
    "create-admin": "node create-admin.js"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "firebase": "^12.7.0",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.3"
  }
}
